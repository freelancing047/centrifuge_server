<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:boot="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:csiboot="urn:import:csi.client.gwt.widget.boot">

   <ui:style gss="true">
        .icon {
        	color: red;
        	font-size: 32px;
        }
        
        .messageContainer {
        	text-align: center;
        }
        
        .message {
        	font-size: 12px;
        }
        
        .buttonNo {
        	text-align: right;
        }
    </ui:style>

    <ui:with field="resources" type="csi.client.gwt.resources.ApplicationResources" />

    <csiboot:Dialog bodyWidth="350px" bodyHeight="50px">
        <boot:FluidRow>
            <boot:Column size="12" addStyleNames="{style.messageContainer}">
                <boot:Paragraph ui:field="message" addStyleNames="{style.message}"></boot:Paragraph>
            </boot:Column>
        </boot:FluidRow>
    </csiboot:Dialog>


</ui:UiBinder>